{
  "compilerOptions": {
    "target": "es6",
    // Target ECMAScript version
    "module": "commonjs",
    // Module system
    "strict": true,
    // Enable all strict type-checking options
    "esModuleInterop": true,
    // Enable interoperability between CommonJS and ES Modules
    "outDir": "./dist",
    // Output directory for compiled JavaScript
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  // Include all TypeScript files under 'src'
  "exclude": [
    "../node_modules"
  ]
}
